<!-- search bar -->

<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search">
        <h4 class="mb-2 search-bar-title">尋找餐廳：</h4>
        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-5">
        <div class="input-group">
          <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="search-button" value="{{keywords}}" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>

        <div class="form-group">
          <select name="sort" class="form-select">
            <option {{#if (eq sort "id_asc" )}}selected{{/if}} value="id_asc">選擇排序方式</option>
            <option {{#if (eq sort "name_asc" )}}selected{{/if}} value="name_asc">A -> Z</option>
            <option {{#if (eq sort "name_desc" )}}selected{{/if}} value="name_desc">Z -> A</option>
            <option {{#if (eq sort "category" )}}selected{{/if}} value="category">類別</option>
            <option {{#if (eq sort "location" )}}selected{{/if}} value="location">地區</option>
          </select>
        </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 ">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-sm-3">
        {{#each restaurantsData}}
        <div class="col">
          <div class="card mb-1">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit">
                <button class="btn btn-link btn-sm">Edit</button></a>
              <a href="/restaurants/{{this._id}}">
                <button class="btn btn-link btn-sm">Details</button></a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm text-white">delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>